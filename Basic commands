kubectl get nodes                #to show all nodes in your cluster
kubectl get pods                 # to show all pods
kubectl get po -o wide           # to show more details about pod
kubectl describe pod nginxpod    # to describe pod
kubectl logs nginxpod            # to see logs of pod 
kubectl apply -f nginxpod.yml    # to create pod
kubectl exec -it nginxpod -- /bin/bash   # to execute the pod
kubectl get deployments
kubectl get services
kubectl get replicaSets
kubectl get namespaces
kubectl describe pod <pod_name>
kubectl describe service <service_name>
kubectl describe deployment <deployment_name>
kubectl create -f <file.yaml>
kubectl apply -f <file.yaml>
kubectl delete -f <file.yaml>
kubectl delete pod <pod_name>
kubectl delete service <service_name>
kubectl logs <pod_name>
kubectl exec -it <pod_name> -- /bin/bash
kubectl scale deployment <deployment_name> --replicas=<num>
kubectl get pods --namespace=<namespace>
kubectl port-forward <pod_name> <lo
